{
  "name": "three-freeform-controls",
  "version": "0.2.2",
  "description": "",
  "keywords": [],
  "main": "dist/three-freeform-controls.js",
  "module": "dist/three-freeform-controls.js",
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "Ashish Chaudhary <iamashishchaudhary@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/tocttou/three-freeform-controls.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "lint": "eslint --ext ts src/ test/",
    "prebuild": "rimraf dist",
    "build": "NODE_ENV=production rollup -c rollup.config.js",
    "start": "NODE_ENV=development rollup -c rollup.config.js -w",
    "examples": "cpy examples/template.html dist --rename=index.html && rollup -c rollup.examples.config.js -w",
    "test": "jest",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "precommit": "lint-staged",
    "docs": "typedoc"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "prettier": {},
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-replace": "^2.3.4",
    "@types/jest": "^26.0.19",
    "@types/lodash.camelcase": "^4.3.6",
    "@types/lodash.get": "^4.4.6",
    "@types/nanoevents": "^1.0.0",
    "@types/node": "^14.14.16",
    "@types/rollup-plugin-json": "^3.0.2",
    "@types/rollup-plugin-sourcemaps": "^0.4.2",
    "@types/three": "^0.139.0",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "colors": "^1.4.0",
    "commitizen": "^4.2.2",
    "coveralls": "^3.1.0",
    "cpy-cli": "^3.1.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "jest-config": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "prompt": "^1.1.0",
    "replace-in-file": "^6.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.35.1",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-multi-input": "^1.3.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "shelljs": "^0.8.4",
    "three": "^0.139.2",
    "three-ik": "^0.1.0",
    "three-spritetext": "^1.6.2",
    "travis-deploy-once": "^5.0.11",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typedoc": "^0.19.2",
    "typedoc-plugin-internal-external": "^2.2.0",
    "typedoc-plugin-no-inherit": "^1.2.0",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "three": ">=0.139.2"
  },
  "dependencies": {
    "nanoevents": "^2.0.0"
  }
}
